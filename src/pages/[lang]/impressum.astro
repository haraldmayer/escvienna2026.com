---
import en from '../../i18n/en.json';
import de from '../../i18n/de.json';

export async function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'de' } }];
}

const { lang } = Astro.params;
const t = lang === 'de' ? de : en;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t["nav.imprint"]}</title>
  </head>
  <body>
    <header>
      <nav>
        <strong>{t["nav.imprint"]}</strong>
        <div><a href="/en/">{t["lang.en"]}</a> | <a href="/de/">{t["lang.de"]}</a></div>
      </nav>
    </header>
    <main>
      <h1>{t["impressum.title"]}</h1>
      <p><strong>{t["impressum.subtitle"]}</strong></p>
      <p>Harald Mayer<br />Kienmayergasse 43<br />1140 Wien<br />Ã–sterreich</p>
      <p><strong>{t["impressum.contact"]}</strong><br />E-Mail: <a href="mailto:info@escvienna2026.com">info@escvienna2026.com</a></p>
      <p>{t["impressum.notice"]}</p>
      <p><a href={`/${lang}/`}>{t["backToHome"]}</a></p>
    </main>
  </body>
</html>
