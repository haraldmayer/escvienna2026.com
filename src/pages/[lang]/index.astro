---
import {
  translations,
  sharedTranslations,
  getStaticPaths,
} from "../../utils/i18n.js";

export { getStaticPaths };

const { lang } = Astro.params;
const t = translations[lang] || translations.en;
const tshared = sharedTranslations;
const supportedLangs = Object.keys(translations);
const defaultLang = "de";
import LanguageRedirect from "../../utils/languageRedirect.js";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
import LanguageMeta from "../../components/LanguageMeta.astro";
import Footer from "../../components/Footer.astro";
import FAQ from "../../components/FAQ.astro";
import AffiliateExplore from "../../components/AffiliateExplore.astro";
import AffiliateMerch from "../../components/AffiliateMerch.astro";
import AffiliateTickets from "../../components/AffiliateTickets.astro";
import Hero from "../../components/Hero.astro";
import News from "../../components/News.astro";
import HistoryTable from "../../components/HistoryTable.astro";
---

<!doctype html>
<html lang={lang}>
  <head>
    <title>{t["siteTitle"]}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="description" content={t["meta.description"]} />
    <link rel="stylesheet" href="/styles/index.css?1" />
    <meta property="og:title" content={t["siteTitle"]} />
    <meta property="og:description" content={t["meta.description"]} />
    <meta property="og:type" content="website" />
    <meta
      http-equiv="Cache-Control"
      content="no-cache, no-store, must-revalidate"
    />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64x64.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="128x128"
      href="/favicon-128x128.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="256x256"
      href="/favicon-256x256.png"
    />
    <LanguageMeta supportedLangs={supportedLangs} defaultLang={defaultLang} />
  </head>
  <body>
    <header>
      <strong>{t["siteTitle"]}</strong>
      <LanguageSwitcher
        lang={lang}
        tshared={tshared}
        supportedLangs={supportedLangs}
        defaultLang={defaultLang}
      />
    </header>
    <Hero t={t} tshared={tshared} />
    <main>
      <h2>{t["section.expect.title"]}</h2>
      <div set:html={t["summary"]} />

      <!-- affiliate -->

      <section>
        <AffiliateExplore t={t} tshared={tshared} />
        <AffiliateMerch t={t} tshared={tshared} />
        <AffiliateTickets t={t} tshared={tshared} />
        <div style="margin: 2rem 0; text-align: left;">
          <a
            rel="sponsored"
            href="https://www.awin1.com/cread.php?s=2359428&v=13859&q=360180&r=1966379"
            style="display: inline-block; border: 2px solid #1976d2; border-radius: 8px; padding: 6px; box-shadow: 0 2px 8px rgba(25,118,210,0.08); transition: box-shadow 0.2s, border-color 0.2s; text-decoration: none; background: #f7faff; cursor: pointer;"
            onmouseover="this.style.boxShadow='0 4px 16px rgba(25,118,210,0.18)';this.style.borderColor='#1565c0'"
            onmouseout="this.style.boxShadow='0 2px 8px rgba(25,118,210,0.08)';this.style.borderColor='#1976d2'"
          >
            <img
              src="https://www.awin1.com/cshow.php?s=2359428&v=13859&q=360180&r=1966379"
              alt="oeticket.com Affiliate Banner"
              style="max-width:220px;height:auto;vertical-align:middle;"
            />
            <span
              style="display:inline-block;margin-left:12px;vertical-align:middle;font-weight:600;color:#1976d2;font-size:1rem;"
              >{t["buy"]}</span
            >
          </a>
        </div>
      </section>

      <!-- content -->
      <News t={t} lang={lang} />
      <HistoryTable t={t} />
      <FAQ t={t} />
    </main>
    <Footer
      lang={lang}
      t={t}
      tshared={tshared}
      supportedLangs={supportedLangs}
      defaultLang={defaultLang}
    />
  </body>
</html>
