---
import en from "../../i18n/en.json";
import de from "../../i18n/de.json";
import fr from "../../i18n/fr.json";
import es from "../../i18n/es.json";
import ja from "../../i18n/ja.json";

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "de" } },
    { params: { lang: "fr" } },
    { params: { lang: "es" } },
    { params: { lang: "ja" } },
  ];
}

const { lang } = Astro.params;

const translations = { en, de, fr, es, ja };

const t = translations[lang] || en;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t["siteTitle"]}</title>
    <meta
      name="description"
      content="News, Tickets, Teilnehmer & Infos zum Eurovision Song Contest 2026 in Wien. Verpasse keine Neuigkeiten rund um den ESC 2026!"
    />
    <link rel="stylesheet" href="/styles/index.css" />
    <link
      rel="alternate"
      href="https://escvienna2026.com/"
      hreflang="x-default"
    />
    <link rel="alternate" href="https://escvienna2026.com/" hreflang="de" />
    <link rel="alternate" href="https://escvienna2026.com/en/" hreflang="en" />
    <link rel="alternate" href="https://escvienna2026.com/fr/" hreflang="fr" />
    <link rel="alternate" href="https://escvienna2026.com/es/" hreflang="es" />
    <link rel="alternate" href="https://escvienna2026.com/ja/" hreflang="ja" />
  </head>
  <body>
    <header>
      <strong>{t["siteTitle"]}</strong>
      <nav>
        <form>
          <label for="lang-select" class="visually-hidden">Language</label>
          <select
            id="lang-select"
            name="lang"
            onchange="location.href=this.value"
          >
            <option value="/en/" selected={lang === "en"}>{t["lang.en"]}</option
            >
            <option value="/de/" selected={lang === "de"}>{t["lang.de"]}</option
            >
            <option value="/fr/" selected={lang === "fr"}>{t["lang.fr"]}</option
            >
            <option value="/es/" selected={lang === "es"}>{t["lang.es"]}</option
            >
            <option value="/ja/" selected={lang === "ja"}>{t["lang.ja"]}</option
            >
            <!-- More languages -->
          </select>
        </form>
      </nav>
    </header>
    <div class="hero-bg">
      <div class="hero-content">
        <h1>{t["home.title"]}</h1>
        <p>{t["home.subtitle"]}</p>
      </div>
    </div>
    <main>
      <h2>{t["section.expect.title"]}</h2>
      <div set:html={t["esc2026_summary"]} />
      <h2>{t["section.stay.title"]}</h2>
      <p>{t["section.stay.text"]}</p>
      <p><a href="https://www.booking.com">{t["link.booking"]}</a></p>
      <h2>{t["section.explore.title"]}</h2>
      <p>{t["section.explore.text1"]}</p>
      <p>{t["section.explore.text2"]}</p>
      <p><a href="https://www.getyourguide.com">{t["link.tours"]}</a></p>
    </main>
    <footer>
      <p><a href={`/${lang}/impressum/`}>{t["footer.imprint"]}</a></p>
      <p>{t["footer.notice1"]}</p>
      <p>{t["footer.notice2"]}</p>
    </footer>
  </body>
</html>
