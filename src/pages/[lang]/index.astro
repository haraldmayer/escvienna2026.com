---
import en from "../../i18n/en.json"; // Großbritannien, Irland, Malta
import de from "../../i18n/de.json"; // Deutschland, Österreich, Schweiz
import fr from "../../i18n/fr.json"; // Frankreich, Schweiz, Belgien
import es from "../../i18n/es.json"; // Spanien
import ja from "../../i18n/ja.json"; // (nicht ESC, evtl. Besucher)
import it from "../../i18n/it.json"; // Italien, Schweiz
import tr from "../../i18n/tr.json"; // Türkei (gelegentliche Teilnahme)
import pl from "../../i18n/pl.json"; // Polen
import shared from "../../i18n/shared.json"; // Polen

export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "de" } },
    { params: { lang: "fr" } },
    { params: { lang: "es" } },
    { params: { lang: "ja" } },
    { params: { lang: "it" } },
    { params: { lang: "nl" } },
    { params: { lang: "sv" } },
    { params: { lang: "no" } },
    { params: { lang: "da" } },
    { params: { lang: "fi" } },
    { params: { lang: "is" } },
    { params: { lang: "pt" } },
    { params: { lang: "el" } },
    { params: { lang: "tr" } },
    { params: { lang: "uk" } },
    { params: { lang: "ru" } },
    { params: { lang: "pl" } },
    { params: { lang: "cs" } },
    { params: { lang: "sk" } },
    { params: { lang: "hu" } },
    { params: { lang: "ro" } },
    { params: { lang: "bg" } },
    { params: { lang: "sr" } },
    { params: { lang: "hr" } },
    { params: { lang: "sl" } },
    { params: { lang: "mk" } },
    { params: { lang: "sq" } },
    { params: { lang: "he" } },
    { params: { lang: "ka" } },
    { params: { lang: "hy" } },
    { params: { lang: "az" } },
    { params: { lang: "lt" } },
    { params: { lang: "lv" } },
    { params: { lang: "et" } },
    { params: { lang: "mt" } },
  ];
}

const { lang } = Astro.params;

const translations = {
  en,
  de,
  fr,
  es,
  ja,
  it,
  tr,
  pl,
};

const t = translations[lang] || en;
const tshared = shared;
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
import LanguageMeta from "../../components/LanguageMeta.astro";
import Footer from "../../components/Footer.astro";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t["siteTitle"]}</title>
    <meta name="description" content={t["meta.description"]} />
    <link rel="stylesheet" href="/styles/index.css" />
    <LanguageMeta />
  </head>
  <body>
    <header>
      <strong>{t["siteTitle"]}</strong>
      <LanguageSwitcher lang={lang} t={t} tshared={tshared} />
    </header>
    <div class="hero-bg">
      <div class="hero-content">
        <h1>{t["home.title"]}</h1>
        <p>{t["home.subtitle"]}</p>
      </div>
    </div>
    <main>
      <h2>{t["section.expect.title"]}</h2>
      <div set:html={t["esc2026_summary"]} />
      <h2>{t["section.stay.title"]}</h2>
      <p>{t["section.stay.text"]}</p>
      <p><a href="https://www.booking.com">{t["link.booking"]}</a></p>
      <h2>{t["section.explore.title"]}</h2>
      <p>{t["section.explore.text1"]}</p>
      <p>{t["section.explore.text2"]}</p>
      <p><a href="https://www.getyourguide.com">{t["link.tours"]}</a></p>
      <h2>{t["section.tickets.title"]}</h2>
      <p set:html={t["section.tickets.text"]} />
      <h2>{t["section.news.title"]}</h2>
      <ul>
        <li><strong>20. Mai 2025:</strong> {t["news.2025-05-20"]}</li>
        <li><strong>19. Mai 2025:</strong> {t["news.2025-05-19"]}</li>
        <li><strong>18. Mai 2025:</strong> {t["news.2025-05-18"]}</li>
        <li><strong>17. Mai 2025:</strong> {t["news.2025-05-17"]}</li>
        <li><strong>16. Mai 2025:</strong> {t["news.2025-05-16"]}</li>
      </ul>
      <h2>{t["faq.title"]}</h2>
      <ul>
        <li><strong>{t["faq.q1"]}</strong><br />{t["faq.a1"]}</li>
        <li><strong>{t["faq.q2"]}</strong><br />{t["faq.a2"]}</li>
        <li><strong>{t["faq.q3"]}</strong><br />{t["faq.a3"]}</li>
        <li><strong>{t["faq.q4"]}</strong><br />{t["faq.a4"]}</li>
        <li><strong>{t["faq.q5"]}</strong><br />{t["faq.a5"]}</li>
      </ul>
    </main>
    <Footer lang={lang} t={t} />
  </body>
</html>
