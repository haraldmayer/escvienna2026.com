export async function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "de" } },
    { params: { lang: "fr" } },
    { params: { lang: "es" } },
    { params: { lang: "ja" } },
    { params: { lang: "it" } },
    { params: { lang: "nl" } },
    { params: { lang: "sv" } },
    { params: { lang: "no" } },
    { params: { lang: "da" } },
    { params: { lang: "fi" } },
    { params: { lang: "is" } },
    { params: { lang: "pt" } },
    { params: { lang: "el" } },
    { params: { lang: "tr" } },
    { params: { lang: "uk" } },
    { params: { lang: "ru" } },
    { params: { lang: "pl" } },
    { params: { lang: "cs" } },
    { params: { lang: "sk" } },
    { params: { lang: "hu" } },
    { params: { lang: "ro" } },
    { params: { lang: "bg" } },
    { params: { lang: "sr" } },
    { params: { lang: "hr" } },
    { params: { lang: "sl" } },
    { params: { lang: "mk" } },
    { params: { lang: "sq" } },
    { params: { lang: "he" } },
    { params: { lang: "ka" } },
    { params: { lang: "hy" } },
    { params: { lang: "az" } },
    { params: { lang: "lt" } },
    { params: { lang: "lv" } },
    { params: { lang: "et" } },
    { params: { lang: "mt" } },
  ];
}

const { lang } = Astro.params;

const translations = {
  en,
  de,
  fr,
  es,
  ja,
  it,
  tr,
  uk,
  ru,
  pl,
};

const t = translations[lang] || en;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t["siteTitle"]}</title>
    <meta
      name="description"
      content="News, Tickets, Teilnehmer & Infos zum Eurovision Song Contest 2026 in Wien. Verpasse keine Neuigkeiten rund um den ESC 2026!"
    />
    <link rel="stylesheet" href="/styles/index.css" />
    <link
      rel="alternate"
      href="https://escvienna2026.com/"
      hreflang="x-default"
    />
    <link rel="alternate" href="https://escvienna2026.com/" hreflang="de" />
    <link rel="alternate" href="https://escvienna2026.com/en/" hreflang="en" />
    <link rel="alternate" href="https://escvienna2026.com/fr/" hreflang="fr" />
    <link rel="alternate" href="https://escvienna2026.com/es/" hreflang="es" />
    <link rel="alternate" href="https://escvienna2026.com/ja/" hreflang="ja" />
  </head>
  <body>
    <header>
      <strong>{t["siteTitle"]}</strong>
      <nav>
        <form>
          <label for="lang-select" class="visually-hidden">Language</label>
          <select
            id="lang-select"
            name="lang"
            onchange="location.href=this.value"
          >
            <option value="/en/" selected={lang === "en"}>{t["lang.en"]}</option
            >
            <option value="/de/" selected={lang === "de"}>{t["lang.de"]}</option
            >
            <option value="/fr/" selected={lang === "fr"}>{t["lang.fr"]}</option
            >
            <option value="/es/" selected={lang === "es"}>{t["lang.es"]}</option
            >
            <option value="/ja/" selected={lang === "ja"}>{t["lang.ja"]}</option
            >
            <option value="/ru/" selected={lang === "ru"}>{t["lang.ru"]}</option
            >
            <option value="/tr/" selected={lang === "tr"}>{t["lang.tr"]}</option
            >
            <option value="/it/" selected={lang === "it"}>{t["lang.it"]}</option
            >
            <option value="/pl/" selected={lang === "pl"}>{t["lang.pl"]}</option
            >
          </select>
        </form>
      </nav>
    </header>
    <div class="hero-bg">
      <div class="hero-content">
        <h1>{t["home.title"]}</h1>
        <p>{t["home.subtitle"]}</p>
      </div>
    </div>
    <main>
      <h2>{t["section.expect.title"]}</h2>
      <div set:html={t["esc2026_summary"]} />
      <h2>{t["section.stay.title"]}</h2>
      <p>{t["section.stay.text"]}</p>
      <p><a href="https://www.booking.com">{t["link.booking"]}</a></p>
      <h2>{t["section.explore.title"]}</h2>
      <p>{t["section.explore.text1"]}</p>
      <p>{t["section.explore.text2"]}</p>
      <p><a href="https://www.getyourguide.com">{t["link.tours"]}</a></p>
      <h2>{t["section.tickets.title"]}</h2>
      <p set:html={t["section.tickets.text"]} />
      <h2>{t["faq.title"]}</h2>
      <ul>
        <li><strong>{t["faq.q1"]}</strong><br />{t["faq.a1"]}</li>
        <li><strong>{t["faq.q2"]}</strong><br />{t["faq.a2"]}</li>
        <li><strong>{t["faq.q3"]}</strong><br />{t["faq.a3"]}</li>
        <li><strong>{t["faq.q4"]}</strong><br />{t["faq.a4"]}</li>
        <li><strong>{t["faq.q5"]}</strong><br />{t["faq.a5"]}</li>
      </ul>
    </main>
    <footer>
      <p><a href={`/${lang}/impressum/`}>{t["footer.imprint"]}</a></p>
      <p>{t["footer.notice1"]}</p>
      <p>{t["footer.notice2"]}</p>
    </footer>
  </body>
</html>
